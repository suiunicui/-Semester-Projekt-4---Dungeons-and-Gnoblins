<Window x:Class="FrontEnd_GameLayout.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontEnd_GameLayout.Views"
        mc:Ignorable="d"
        Title="Dungeons and Gnoblins" Height="{Binding Window_Height}" Width="{Binding Window_Width}"
        Background="{StaticResource backgroundColor}" 
        ResizeMode="CanResize" WindowState="Normal" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <ContentControl Content="{Binding CurrentPageViewModel}" />
    </Grid>
</Window>
